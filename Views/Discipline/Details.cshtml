@model ProjetAssociationSports.Models.Discipline

@{
    ViewBag.Title = "Details";
}



<div>
    <h1 class="display-1"> @Html.DisplayFor(model => model.Nom)</h1>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>


        </dl>

        <table class="table">
            <tr>
                <th></th>
            </tr>

            @foreach (var Section in Model.Sections)
            {
                <tr><td class="section">@Section.Nom</td></tr>
                <tr><td class="section">@Section.Description</td></tr>
                <tr><td class="myLinks" id="test">@Html.ActionLink("Voir les creneaux", "Details", "Sections", new { id = Section.Id }, null)</td></tr>
            }

        </table>
</div>
<p class="myLinks">
    @Html.ActionLink("Retour", "Index","Home")
</p>
