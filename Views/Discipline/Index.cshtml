@model IEnumerable<ProjetAssociationSports.Models.Discipline>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p  class="myLinks">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr><td  class="myLinks">@item.Nom,@Html.ActionLink("Voir les sections","Details",new { @item.Id})</td></tr>
        <tr><td  class="myLinks">@item.Description</td></tr>
        <tr>
            <td  class="myLinks">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
